<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700">


    <TextView
        android:id="@+id/profilepageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/userID"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/userID"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="3dp"
        android:gravity="center_horizontal"
        android:text="UserId: "
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilepageTitle"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/User"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:text="User: "
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/recipe2"
        app:layout_constraintStart_toStartOf="@+id/recipe2"
        app:layout_constraintTop_toBottomOf="@+id/profilepageTitle"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/recipe1"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:gravity="center_horizontal"
        android:text="Recipe 1"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/userID"
        app:layout_constraintStart_toEndOf="@+id/userID"
        app:layout_constraintTop_toBottomOf="@+id/userID"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/recipe2"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:text="Recipe 2"
        android:textColor="@color/colorBlack"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recipe1"
        app:layout_constraintTop_toBottomOf="@+id/User"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Logout"
        android:textColor="@color/colorBlack"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/addNewRecipeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Add Recipe"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/recipe1"
        app:layout_constraintTop_toBottomOf="@+id/recipe1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/profileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="Profile"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/recipe2"
        app:layout_constraintTop_toBottomOf="@+id/recipe2"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>